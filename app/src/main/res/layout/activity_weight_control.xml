<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#c0c1c0"
    tools:context=".WeightControl">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="209dp"
        android:layout_height="89dp"
        android:contentDescription="@string/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/olio_apinlogo_uusi" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="32dp"
        android:layout_below="@id/imageView2" />

    <EditText
        android:id="@+id/addWeight"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/enter_your_weight"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="70dp"
        android:padding="15dp"
        android:inputType="numberDecimal"
        android:layout_below="@id/graph"
        android:background="@drawable/custom"
        android:textSize="15sp"
        android:importantForAutofill="no"/>


    <Button
        android:id="@+id/dailyWeightButton"
        android:layout_marginBottom="8dp"
        android:text="@string/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/addWeight"
        android:background="@drawable/btn_custom"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:backgroundTint="@color/greendark" />

    <Button
        android:id="@+id/backC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/dailyWeightButton"
        android:text="@string/back"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="@drawable/btn_custom"
        app:backgroundTint="@color/green" />



</RelativeLayout>